extends layout
block content
    #wrapper
        include header
        #page-wrapper
            .container-fluid
                .row
                    .col-lg-12
                        h1.page-header Customer feedback link
                .row
                    .col-lg-6
                        form(data-toggle='validator', role='form', action='/send_feedback_link', method='POST')
                            .form-group
                                lable(for='consultants') Consultants
                                select#consultants.form-control(name='consultants')
                                    each cval in consultants
                                        option(value='#{cval.consultantid}+#{cval.name}') #{cval.name}
                            .form-group
                                lable(for='companies') Companies
                                select#companies.form-control(name='companies')
                                    each cpval in companies
                                        option(value='#{cpval.companyid}+#{cpval.email}') #{cpval.name}
                            .form-group
                                button.btn.btn-primary.success(type='submit') Send
    include footer