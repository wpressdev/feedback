extends layout
block content
    #wrapper
        include header
        #page-wrapper
            .container-fluid
                .row
                    .col-lg-12
                        h1.page-header Edit consultant
                        if consult
                            h1.page-header Edit #{consult.name}
                .row
                    .col-lg-6
                        form(data-toggle='validator', role='form', action='/edit_consultant', method='POST')
                            .form-group
                                    input#inputUsername.form-control(name='name', type='text', placeholder='Name', data-error='Name is required', required='', autofocus='')
                                    .help-block.with-errors
                            .form-group
                                    input#inputEmail.form-control(name='email', type='email', placeholder='Email', data-error='Valid email is required', required='')
                                    .help-block.with-errors
                            .form-group
                                button.btn.btn-primary.success(type='submit') Update
    include footer